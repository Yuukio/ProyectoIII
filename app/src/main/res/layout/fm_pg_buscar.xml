<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Equipo retador"
        android:id="@+id/textView6"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#fff5f5f5"
        android:background="#ff004863" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:background="#ffafafaf" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Los iracundos de montesuma y el barrio chino"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:textColor="#ff595959" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/textView3"
        android:background="#81002c40"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cancha sintetica del chavo del ocho"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#ff595959" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageButton"
            android:layout_gravity="right" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/textView5"
        android:background="#81002c40"
        android:layout_marginTop="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="Cancelar"
            android:id="@+id/btnCancelar"
            android:textColor="#ff004863"
            android:background="@drawable/estilo_btn_retar_equipo"
            android:layout_weight="1" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/textView7"
            android:background="#81002c40" />

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="Siguiente"
            android:id="@+id/btnSiguiente"
            android:layout_weight="1"
            android:textColor="#ff004863"
            android:background="@drawable/estilo_btn_retar_equipo"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:background="#81002c40" />

        <Button
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="Retar"
            android:id="@+id/btnAceptar"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="#ff004863"
            android:background="@drawable/estilo_btn_retar_equipo" />
    </LinearLayout>

</LinearLayout>