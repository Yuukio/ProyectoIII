<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ima3">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.28">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BUSCAR RETO"
                android:id="@+id/button"
                android:background="@drawable/estilo_btn_buscar_reto"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:freezesText="false"
                android:focusable="false"
                android:soundEffectsEnabled="false"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="00.1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="EQUIPOS"
                android:id="@+id/button2"
                android:layout_weight="0.8"
                android:textSize="19dp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:background="@drawable/estilo_btn_principales"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linea_equipo_cancha"
                android:background="#9b000000" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CANCHAS"
                android:id="@+id/button3"
                android:layout_weight="0.8"
                android:textSize="19dp"
                android:background="@drawable/estilo_btn_principales"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:text="New Text"
            android:id="@+id/linea_horizontal"
            android:background="#9b000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="00.1">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="RANKING"
                android:id="@+id/button4"
                android:layout_weight="0.8"
                android:textSize="19dp"
                android:background="@drawable/estilo_btn_principales"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:id="@+id/linea_ranking_evento"
                android:background="#9b000000"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="EVENTOS"
                android:id="@+id/button5"
                android:layout_weight="0.8"
                android:textSize="19dp"
                android:background="@drawable/estilo_btn_principales"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.22">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:background="#bc000000"
                android:textColor="#ffffffff"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>