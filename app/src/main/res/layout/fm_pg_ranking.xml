<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.elpoeta.menulateralslide.PaginaPrincipal.Ranking"
    android:orientation="vertical">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="1"
        android:background="@color/azul_letra">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.02">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="1"
                    android:id="@+id/txt_puesto_r"
                    android:gravity="center"
                    android:layout_weight="0.04"
                    android:textSize="20dp"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/azul_letra" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="-"
                    android:id="@+id/textView4"
                    android:layout_weight="0.05"
                    android:textColor="@color/azul_letra"
                    android:gravity="center"
                    android:textSize="35dp" />

                <LinearLayout android:id="@+id/thumbnail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:layout_alignParentLeft="true"

                    android:background="@color/azul_letra"
                    android:layout_weight="0"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ima_equipo_r"
                        android:background="@color/azul_letra" />

                </LinearLayout>
            </TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Equipos"
                android:id="@+id/txt_equipos_r"
                android:layout_weight="0.25"
                android:gravity="center"
                android:textColor="@color/fondo_pantallas"
                android:textSize="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pts"
                android:id="@+id/txt_pts_r"
                android:layout_weight="0.105"
                android:gravity="center"
                android:textColor="@color/fondo_pantallas"
                android:textSize="16dp"
                android:background="#ff005472" />

        </TableRow>

    </TableLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista_ranking"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</LinearLayout>