<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffececec">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nombre Equipo"
            android:id="@+id/txt_nombre_datos"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_weight="0.5"
            android:background="@color/azul_letra"
            android:textColor="@color/fondo_pantallas"
            android:lines="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/ima_datos"
                android:background="#ffa3a3a3"
                android:padding="8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="325"
                        android:id="@+id/txt_doles_datos"
                        android:layout_weight="1"
                        android:gravity="top|right"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/azul_letra" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Goles"
                        android:id="@+id/textView15"
                        android:layout_gravity="right|center_horizontal"
                        android:layout_weight="0.5"
                        android:gravity="bottom|left"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/azul_letra" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="7490"
                        android:id="@+id/txt_pts_datos"
                        android:layout_weight="1"
                        android:gravity="top|right"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/azul_letra" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Puntos"
                        android:id="@+id/textView13"
                        android:layout_gravity="right|center_horizontal"
                        android:layout_weight="0.5"
                        android:gravity="bottom|left"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/azul_letra"
                        android:textStyle="bold"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="7"
                        android:id="@+id/txt_ranked_datos"
                        android:layout_weight="1"
                        android:gravity="top|right"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/azul_letra" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Ranked"
                        android:id="@+id/textView10"
                        android:layout_gravity="right|center_horizontal"
                        android:layout_weight="0.5"
                        android:gravity="bottom|left"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/azul_letra"
                        android:textStyle="bold"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/azul_letra">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="VICTORIAS"
            android:id="@+id/textView2"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/fondo_pantallas" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="87"
            android:id="@+id/txt_victorias_datos"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="@color/fondo_pantallas"
            android:layout_marginLeft="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DERROTAS"
            android:id="@+id/textView16"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/fondo_pantallas" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="25"
            android:id="@+id/txt_derrotas_datos"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="@color/fondo_pantallas"
            android:layout_marginLeft="4dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.84"
        android:background="@color/azul_letra"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView19"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:password="false"
            android:background="#ffececec" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descripcion"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"
            android:background="@color/azul_letra"
            android:textColor="@color/fondo_pantallas"
            android:padding="8dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Lider"
            android:id="@+id/textView21"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/azul_letra" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Nombre Lider del equipo"
            android:id="@+id/txt_lider_datos"
            android:layout_weight="1"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/azul_letra" />
    </LinearLayout>
</LinearLayout>