<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:background="@drawable/fondo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.24"
                    android:weightSum="1">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/btn_retar_equipo_manual"
                        android:background="@drawable/estilo_btn_buscar_reto"
                        android:textSize="35dp"
                        android:textColor="#fff3f3f3"
                        android:textStyle="bold"
                        android:text="BUSCAR RETO" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="00.1">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="EQUIPOS"
                        android:id="@+id/btn_equipos"
                        android:layout_weight="0.8"
                        android:textSize="19dp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:background="@drawable/estilo_btn_principales"
                        android:clickable="false" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/linea_equipo_cancha" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="CANCHAS"
                        android:id="@+id/btn_canchas"
                        android:layout_weight="0.8"
                        android:textSize="19dp"
                        android:background="@drawable/estilo_btn_principales"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:text="New Text"
                    android:id="@+id/linea_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="00.1">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="RANKING"
                        android:id="@+id/btn_ranking"
                        android:layout_weight="0.8"
                        android:textSize="19dp"
                        android:background="@drawable/estilo_btn_principales"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/linea_ranking_evento" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="EVENTOS"
                        android:id="@+id/btn_eventos"
                        android:layout_weight="0.8"
                        android:textSize="19dp"
                        android:background="@drawable/estilo_btn_principales"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.32"
                    android:layout_gravity="bottom">

                    <!--android.support.v4.view.ViewPager
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/viewPager" />

                    <include layout="@layout/footer"  /-->

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.01">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/txt_pts_r"
                        android:background="#bc000000"
                        android:textColor="#ffffffff"/>
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </ScrollView>

</FrameLayout>